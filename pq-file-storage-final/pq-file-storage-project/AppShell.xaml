<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="pq_file_storage_project.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:pq_file_storage_project.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="pq_file_storage_project">

    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginView}"
        Route="login"/>
    <ShellContent 
        ContentTemplate="{DataTemplate pages:RegisterView}"
        Route="register"/>
</Shell>
